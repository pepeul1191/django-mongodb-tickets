class Enterprise {
  - id: ObjectId
  - businessName: String
  - tradeName: String
  - taxId: String {11 digits} // RUC in Peru
  - fiscalAddress: String
  - locationId: ObjectId
  - phone: String
  - email: String
  - website: String
  - imageUrl: String
  - created: DateTime
  - updated: DateTime
}

class Employee {
  - _id: ObjectId
  - names: String
  - lastNames: String
  - created: DateTime
  - updated: DateTime
  - userId: ObjectId
  - enterpriseId: ObjectId
}

